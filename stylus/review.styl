  .main
    width 1200px
    height 60px
    line-height 60px
    margin 20px auto 0
    background: #fff
    position relative
    font-family: MicrosoftYaHei;
    font-size: 14px;
    color: #333333;
    div
      float left 
      &.div1
        width: 270px
        padding-left 40px
      &.div3
        float right
  .main1
    width 1120px
    padding 40px
    line-height 160px
    margin 0px auto
    background: #fff
    font-family: MicrosoftYaHei;
    overflow hidden
    img
      width: 226px
      height: 160px
      float left
      margin-right: 60px
    span
      float left
      font-family: MicrosoftYaHei;
      font-size: 18px;
      color: #12CA96
  .recording
    width 1120px
    padding 40px
    margin 0px auto
    background: #fff
    font-family: MicrosoftYaHei;
    overflow hidden
    .div
      border-top 1px dashed #6666
      ul
        li
          position relative
          list-style none
          height: 45px
          .div1
            width: 30px
            height 30px
            position absolute
            left -25px
            top 0
            span
              position absolute
              top -1px
              display: block
              width: 22px
              height: 22px
              background: url('../images/ic_nor_exhibition.png')
              background-size: 100% 100%
            div
              position absolute
              top 20px
              left 10px
              border-left: 1px solid #D8D8D8
              width: 1px
              height 22px
          .div2
            color #999
            span
              padding: 0 30px
              font-size: 14px
          &.last
            .div2
              color #333
              font-weight: bold
            .div1
              span
                background: url('../images/ic_pre_exhibition.png')
                background-size: 100% 100%
              div
                display: none
